enum Role {
  USER
  ADMIN
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  username   String @unique
  email      String @unique
  role       Role   @default(USER)

  is_active Boolean @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  auth UserAuth? @relation("UserToAuth")

  @@map("users")
}

model UserAuth {
  id                Int       @id @default(autoincrement())
  user_id            Int       @unique
  password          String
  email_verified     Boolean   @default(false)
  verification_token String?
  token_expires_at    DateTime?
  user              User      @relation("UserToAuth", fields: [user_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("user_auths")
}
