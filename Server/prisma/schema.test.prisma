enum test_Role {
    USER
    ADMIN
}

generator test_client {
    provider = "prisma-client"
    output   = "../generated/prisma/test"
}

datasource test_db {
    provider = "sqlite"
}

model test_user {
    id         Int       @id @default(autoincrement())
    first_name String
    last_name  String
    username   String    @unique
    email      String    @unique
    role       test_Role @default(USER)

    is_active Boolean @default(true)

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    auth test_userAuth? @relation("UserToAuth")

}

model test_userAuth {
    id                 Int       @id @default(autoincrement())
    user_id            Int       @unique
    password           String
    email_verified     Boolean   @default(false)
    verification_token String?
    token_expires_at   DateTime?
    user               test_user @relation("UserToAuth", fields: [user_id], references: [id], onDelete: Cascade)

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

}
